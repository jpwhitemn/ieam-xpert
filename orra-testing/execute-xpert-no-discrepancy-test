## add all the profiles, devices, rules first (via setup scripting)

## simulate push of message to RFID Scanner and Barcode Scanner

curl -s -o /dev/null -w "%{http_code}" -X GET http://10.0.0.75:59882/api/v2/device/name/RFIDScanner/product_id?ds-pushevent=yes

curl -s -o /dev/null -w "%{http_code}" -X GET http://10.0.0.75:59882/api/v2/device/name/BarcodeReader/product_id?ds-pushevent=yes


## publish non-sense data collection message into the MQTT vi topic
mosquitto_pub -h 10.0.0.75 -m "{\"frame_id\":\"4ef4e7b1-ae55-4848-bce1-82a8863efdff\", \"class_id\":\"coke\", \"probability\":\"0.3190558850765228\",\"frame\":\"foo\",\"frame_content_type\": \"image/jpeg\"}" -t geti_classification_demo/object

## publish real data collection message into the MQTT vi topic
mosquitto_pub -h 10.0.0.75 -f data-collection-msg-with-base64.json -t geti_classification_demo/object

## publish discrepancy message to CTS
mosquitto_pub -h 10.0.0.75 -f discrepancy-msg.json -t vi/discrepancy
